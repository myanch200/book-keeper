<%#
  [RailsNotes UI Addition]
  Custom reset password mailer template, using the RailsNotes UI email components.
%>
<%= render Email::Plain::Container.new(
     padding: "32px 64px",
		 dark_mode_enabled: false
   ) do |container| %>
  <%= render Email::Heading.new(text: "Reset your password.") %>
  <%= render Email::Text.new(text: "Hey #{@resource.email}, we've received a request to reset your password. If that sounds right to you, click the button below to set your new password.") %>
  <%= render Email::PercentageButton.new(
        text: "Reset your password ▸▸▸",
        href: edit_password_url(@resource, reset_password_token: @token),
        bold: true,
        height: "12px",
        shadow: "none",
      ) %>
  <%= render Email::Text.new(text: "If you didn't request a password reset, you can safely ignore this email.") %>
  <%= render Email::Text.new do %>
    Cheers, <br />
    <%= link_to "@hrrsnbbnt", "https://twitter.com/hrrsnbbnt" %>
  <% end %>
  <%= render Email::Colorblock.new(
        color: Email::Colors::RED_50,
        border_width: "0",
        border_radius: "12px",
        margin: "64px auto auto aputo",
        padding: "16px 24px",
      ) do %>
    <%= render Email::Text.new(text: "RailsNotes UI", bold: true, letter_spacing: "-0.0375rem", margin: "8px auto", color: Email::Colors::GRAY_700) %>
    <%= render Email::Text.new(size: "12px", margin: "4px auto", color: Email::Colors::GRAY_600) do %>
      Visit our <%= link_to "home page", "https://railsnotesui.xyz" %> to learn more, or check out our <%= link_to "help docs", "https://railsnotesui.xyz" %>.
    <% end %>
    <%= render Email::Text.new(text: "© #{Time.now.year} RailsNotes UI", margin: "4px auto", size: "12px", color: Email::Colors::GRAY_600) %>
  <% end %>
<% end %>
